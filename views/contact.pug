extends base.pug

block scripts
  script(src='/static/index.js')

block style
    style
      include ../static/style.css
      include ../static/contact.css

block content
  div.container
    h1 Contact Us
    form(action="/contact", method="post" class="mForm") 
        input(type="text" class="TInput" name="name" placeholder="Enter your Name")
        input(type="phone" class="TInput" name="phone" placeholder="Enter your Phone number")
        input(type="email" class="TInput" name="email" placeholder="Enter your Email-Id")
        input(type="text" class="TInput" name="address" placeholder="Enter your Address")
        input(type="text" class="TInput" name="queries" placeholder="Enter your Queries/Suggestions")
        button(class="btn")
          |Submit